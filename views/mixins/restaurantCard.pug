mixin restaurantCard(restaurant)

    div.card
        div.card-header
            div.backdrop
            div.card-title=restaurant.name
            img.card-header-image(src=restaurant.image)
        div.card-body
            div.edit
                a(href=`#`) Edit
            div.card-details
                div.category= restaurant.category
                    div.rating
                        -for(let i = 0; i<restaurant.rating; i++)
                              span  &#Xb50
            div.description=restaurant.description